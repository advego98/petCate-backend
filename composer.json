{
    "name": "bonvet/api",
    "description": "BonVet API - Sistema de gestiÃ³n veterinaria para mascotas",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.5",
        "illuminate/database": "^10.0",
        "illuminate/events": "^10.0",
        "firebase/php-jwt": "^6.8",
        "endroid/qr-code": "^5.0",
        "monolog/monolog": "^3.4",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "BonVet\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BonVet\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "migrate": "php database/migrate.php",
        "test": "vendor/bin/phpunit tests/",
        "post-install-cmd": [
            "@php -r \"copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}